# Makefile for plugin modules.
# @configure_input@

progname = @PACKAGE_NAME@
package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@
tarname = @PACKAGE_TARNAME@
distdir = $(tarname)-$(version)

prefix = @prefix@
exec_prefix = @exec_prefix@
sbindir = @sbindir@
libdir = @libdir@
sysconfdir = @sysconfdir@
localstatedir = @localstatedir@

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
CFLAGS = -fpic @CFLAGS@
bdb_LIBS = @bdb_LIBS@
netfilter_LIBS = @netfilter_LIBS@
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@

SRC = pf.c netfilter.c bdb.c fw_dummy.c
OBJ = $(SRC:.c=.o)

all: pf.so netfilter.so fw_dummy.so bdb.so

pf.so: pf.o
	$(CC) $(CFLAGS) -shared -o pf.so pf.o

netfilter.so: netfilter.o
	$(CC) $(CFLAGS) -shared -o netfilter.so netfilter.o -L/usr/local/lib $(netfilter_LIBS)

fw_dummy.so: fw_dummy.o
	$(CC) $(CFLAGS) -shared -o fw_dummy.so fw_dummy.o

bdb.so: bdb.o
	$(CC) $(CFLAGS) -shared -o bdb.so bdb.o -L/usr/local/BerkeleyDB.5.3/lib $(bdb_LIBS)

install:
	$(INSTALL) -d $(DESTDIR)$(libdir)/$(progname)
	$(INSTALL_PROGRAM) -m 750 netfilter.so $(DESTDIR)$(libdir)/$(progname)
	$(INSTALL_PROGRAM) -m 750 bdb.so $(DESTDIR)$(libdir)/$(progname)
	$(INSTALL_PROGRAM) -m 750 pf.so $(DESTDIR)$(libdir)/$(progname)

.PHONY: clean install

clean:
	rm -f $(OBJ) *.so
