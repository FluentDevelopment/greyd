# Makefile for plugin modules.
# @configure_input@

progname = @PACKAGE_NAME@
package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@
tarname = @PACKAGE_TARNAME@
distdir = $(tarname)-$(version)

prefix = @prefix@
exec_prefix = @exec_prefix@
sbindir = @sbindir@
libdir = @libdir@
sysconfdir = @sysconfdir@
localstatedir = @localstatedir@

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
CFLAGS = -fpic @CFLAGS@
CPPFLAGS = @CPPFLAGS@
LDFLAGS = @LDFLAGS@

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@

WITH_BDB = @WITH_BDB@
WITH_NETFILTER = @WITH_NETFILTER@
WITH_PF = @WITH_PF@

SRC = fw_dummy.c

ifeq ($(WITH_BDB),yes)
	SRC += bdb.c
	bdb_LIBS = @bdb_LIBS@
endif

ifeq ($(WITH_NETFILTER),yes)
	SRC += netfilter.c
	netfilter_LIBS = @netfilter_LIBS@
endif

ifeq ($(WITH_PF),yes)
	SRC += pf.c
endif

OBJ = $(SRC:.c=.o)
SOBJ = $(SRC:.c=.so)

all: $(SOBJ)

pf.so: pf.o
	$(CC) $(CFLAGS) $(LDFLAGS) -shared -o pf.so pf.o

netfilter.so: netfilter.o
	$(CC) $(CFLAGS) $(LDFLAGS) -shared -o netfilter.so netfilter.o $(netfilter_LIBS)

fw_dummy.so: fw_dummy.o
	$(CC) $(CFLAGS) $(LDFLAGS) -shared -o fw_dummy.so fw_dummy.o

bdb.so: bdb.o
	$(CC) $(CFLAGS) $(LDFLAGS) -shared -o bdb.so bdb.o $(bdb_LIBS)

install:
	$(INSTALL) -d $(DESTDIR)$(libdir)/$(progname)
	$(INSTALL_PROGRAM) -m 750 netfilter.so $(DESTDIR)$(libdir)/$(progname)
	$(INSTALL_PROGRAM) -m 750 bdb.so $(DESTDIR)$(libdir)/$(progname)
	$(INSTALL_PROGRAM) -m 750 pf.so $(DESTDIR)$(libdir)/$(progname)

.PHONY: clean install

clean:
	rm -f $(OBJ) *.so
