# Makefile for config files.
# @configure_input@

progname = @PACKAGE_NAME@
package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@
tarname = @PACKAGE_TARNAME@
distdir = $(tarname)-$(version)

prefix = @prefix@
exec_prefix = @exec_prefix@
sbindir = @sbindir@
libdir = @libdir@
sysconfdir = @sysconfdir@
localstatedir = @localstatedir@

srcdir = @srcdir@
VPATH = @srcdir@

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@
SED = @SED@

all: Makefile greyd.conf

greyd.conf: greyd.conf.in
	$(SED) -e 's,[@]PACKAGE_NAME[@],$(progname),g' \
		-e 's,[@]libdir[@],$(libdir),g' \
		-e 's,[@]localstatedir[@],$(localstatedir),g' \
		-e 's,[@]sysconfdir[@],$(sysconfdir),g' \
		< $< >$@

Makefile: Makefile.in ../config.status
	../config.status $@

clean:
	rm -f greyd.conf

install:
	$(INSTALL) -d $(DESTDIR)$(sysconfdir)/$(progname)
	$(INSTALL_DATA) greyd.conf $(DESTDIR)$(sysconfdir)/$(progname)/greyd.conf

.PHONY: install clean
