#
# Master makefile for greyd.
#
progname = @PACKAGE_NAME@
package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@
tarname = @PACKAGE_TARNAME@
distdir = $(tarname)-$(version)

prefix = @prefix@
exec_prefix = @exec_prefix@
sbindir = @sbindir@
libdir = @libdir@
sysconfdir = @sysconfdir@
localstatedir = @localstatedir@

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
CFLAGS = @CFLAGS@

all clean:
	$(MAKE) -C etc/ $@
	$(MAKE) -C src/ $@
	$(MAKE) -C tests/ $@

Makefile: Makefile.in config.status
	./config.status $@

config.status: configure
	./config.status --recheck

check test: all
	$(MAKE) -C tests/ $@

install:
	$(MAKE) -C etc/ $@
	$(MAKE) -C src/ $@

dist: $(distdir).tar.gz

$(distdir).tar.gz: $(distdir)
	tar chof - $(distdir) |gzip -9c >$@
	rm -rf $(distdir)

$(distdir): FORCE
	mkdir -p $(distdir)/etc
	mkdir -p $(distdir)/src
	mkdir -p $(distdir)/src/modules
	mkdir -p $(distdir)/tests
	mkdir -p $(distdir)/tests/data
	cp $(srcdir)/configure $(distdir)
	cp $(srcdir)/install-sh $(distdir)
	cp $(srcdir)/configure.ac $(distdir)
	cp $(srcdir)/Makefile.in $(distdir)
	cp $(srcdir)/etc/Makefile.in $(distdir)/etc
	cp $(srcdir)/etc/greyd.conf.in $(distdir)/etc
	cp $(srcdir)/src/Makefile.in $(distdir)/src
	cp $(srcdir)/src/config.h.in $(distdir)/src
	cp $(srcdir)/src/*.[ch] $(distdir)/src
	cp $(srcdir)/src/modules/Makefile.in $(distdir)/src/modules/
	cp $(srcdir)/src/modules/*.c $(distdir)/src/modules
	cp $(srcdir)/tests/Makefile.in $(distdir)/tests
	cp $(srcdir)/tests/*.[ch] $(distdir)/tests
	cp $(srcdir)/tests/run_tests.pl.in $(distdir)/tests
	cp $(srcdir)/tests/data/*.conf.in $(distdir)/tests/data
	cp $(srcdir)/tests/data/*.gz.in $(distdir)/tests/data

distcheck: $(distdir).tar.gz
	gunzip -c $(distdir).tar.gz |tar xvf -
	cd $(distdir) && ./configure
	cd $(distdir) && $(MAKE) all
	cd $(distdir) && $(MAKE) check
	cd $(distdir) && $(MAKE) clean
	rm -rf $(distdir)
	@echo
	@echo "** Package $(distdir).tar.gz is good to go"

FORCE:
	-rm $(distdir).tar.gz >/dev/null 2>&1
	-rm $(distdir) >/dev/null 2>&1

.PHONY: FORCE all clean dist distcheck
